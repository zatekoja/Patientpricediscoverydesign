# Server Configuration
SERVER_HOST=0.0.0.0
SERVER_PORT=8080

# Database Configuration
DB_HOST=localhost
DB_PORT=5432
DB_USER=postgres
DB_PASSWORD=postgres
DB_NAME=patient_price_discovery
# SSL mode for PostgreSQL:
# - Use `require` or `verify-full` in non-local environments to ensure TLS is used.
# - `disable` should be used only for local development with a trusted local database.
DB_SSLMODE=require

# Redis Configuration
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=0

# Geolocation Provider Configuration
# Options: mock, google-maps, mapbox
GEOLOCATION_PROVIDER=mock
GEOLOCATION_API_KEY=

# OpenTelemetry Configuration
# Set to true to enable OTEL tracing and metrics
OTEL_ENABLED=false
OTEL_SERVICE_NAME=patient-price-discovery
OTEL_SERVICE_VERSION=1.0.0
# OTEL Collector endpoint (e.g., localhost:4317)
OTEL_ENDPOINT=

# CORS Configuration
# Comma-separated list of allowed origins. Use "*" only for development.
# Example: https://example.com,https://app.example.com
ALLOWED_ORIGINS=*
